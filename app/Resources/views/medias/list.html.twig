{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Médias{% endblock %}

{% block body %}
    {% import 'macro/table.html.twig' as table %}

    <ul class="nav nav-pills">
        <li role="presentation"><a href="{{ path('app_medias_add') }}">Ajouter un média</a></li>
    </ul>

    <h2>Médias</h2>

    {{ table.nb_elements(elements|length) }}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Libellé</th>
            <th>Type</th>
            <th>Format</th>
        </tr>
        </thead>
        <tbody>
        {% for element in elements %}
            <tr>
                <td><a href="{{ path('app_medias_edit', {'id': element.id}) }}">{{ element.title }}</a></td>
                <td>{{ element.type.title }}</td>
                <td>{{ element.format.title }}</td>
            </tr>
        {% else %}
            <tr><th colspan="3">Aucun élément</th></tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
