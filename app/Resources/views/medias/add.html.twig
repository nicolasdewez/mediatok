{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Média / Créer{% endblock %}

{% block body %}
    <ul class="nav nav-pills">
        <li role="presentation"><a href="{{ path('app_medias') }}">Liste des médias</a></li>
    </ul>

    <h2>Créer un média</h2>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.type) }}
    {{ form_row(form.format) }}
    <div id="fields"></div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('app/medias.js') }}" ></script>
{% endblock %}
