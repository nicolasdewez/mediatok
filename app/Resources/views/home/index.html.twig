{% extends 'base.html.twig' %}

{% block body %}

    <h2>Statistiques</h2>

    <table class="table table-striped">
        <tbody>
            <tr>
                <td>Nombre de médias</td>
                <td>{{ stats.medias.all }}</td>
            </tr>
            <tr>
                <td>Nombre de médias actifs</td>
                <td>{{ stats.medias.active }}</td>
            </tr>
            <tr>
                <td>Nombre de types</td>
                <td>{{ stats.types.all }}</td>
            </tr>
            <tr>
                <td>Nombre de types actifs</td>
                <td>{{ stats.types.active }}</td>
            </tr>
            <tr>
                <td>Type contenant le plus de médias</td>
                <td>{{ stats.types.maxMedia.type.title }} - {{ stats.types.maxMedia.nb }}</td>
            </tr>
            <tr>
                <td>Type contenant le plus de médias actifs</td>
                <td>{{ stats.types.maxMediaActive.type.title }} - {{ stats.types.maxMediaActive.nb }}</td>
            </tr>
            <tr>
                <td>Nombre de formats</td>
                <td>{{ stats.formats.all }}</td>
            </tr>
            <tr>
                <td>Nombre de formats actifs</td>
                <td>{{ stats.formats.active }}</td>
            </tr>
            <tr>
                <td>Format contenant le plus de médias</td>
                <td>{{ stats.formats.maxMedia.format.title }} ({{ stats.formats.maxMedia.format.type.title }}) - {{ stats.types.maxMedia.nb }}</td>
            </tr>
            <tr>
                <td>Format contenant le plus de médias actifs</td>
                <td>{{ stats.formats.maxMediaActive.format.title }} ({{ stats.formats.maxMediaActive.format.type.title }}) - {{ stats.types.maxMediaActive.nb }}</td>
            </tr>
            <tr>
                <td>Nombre d'exports CSV</td>
                <td>{{ stats.exports.csv }}</td>
            </tr>
            <tr>
                <td>Nombre d'exports PDF</td>
                <td>{{ stats.exports.pdf }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}
